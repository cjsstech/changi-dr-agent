# Travel Assistant Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: API Keys (provide at least one)
# ===========================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key - Get from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# OPTIONAL: Server Configuration
# ===========================================

# Flask server settings
DEBUG=true
HOST=0.0.0.0
PORT=5008

# MCP Server URL (if running separately)
MCP_SERVER_URL=http://localhost:8002/mcp

# Changi Airport API (for flight data)
CHANGI_API_URL=https://cauat-appsync.lz.changiairport.com/graphql
CHANGI_API_KEY=a2-rjm7x6mpdvfvljwagw6acfqjzm

# ===========================================
# OPTIONAL: Storage Configuration
# ===========================================

# Path to agents configuration
AGENTS_STORAGE_PATH=storage/agents.json

# Path to users storage
USERS_STORAGE_PATH=storage/users.json

# Path to workflows storage
WORKFLOWS_STORAGE_PATH=storage/workflows.json

# Default agent ID
DEFAULT_AGENT_ID=travel-bot-default

# ===========================================
# OPTIONAL: LLM Configuration
# ===========================================

# Default LLM provider: 'openai' or 'gemini'
DEFAULT_LLM_PROVIDER=openai

# Default LLM model
DEFAULT_LLM_MODEL=gpt-4o
